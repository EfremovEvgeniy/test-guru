<%= form_with model: [:admin, @badge], local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p><br>

  <p>
    <%= form.label :image_url %><br>
    <%= form.text_field :image_url %>
  </p><br>

  <p>
    <%= form.label :rule %><br>
    <%= form.collection_select :rule, Badge::RULES , :to_s, :to_s,  prompt: true %>
  </p><br>

  <p>
    <%= form.label :param %><br>
    <%= form.text_field :param %>
  </p><br>

  <p><%= form.submit %></p>

<% end %>
<p><%= link_to 'Back', admin_badges_path %></p>