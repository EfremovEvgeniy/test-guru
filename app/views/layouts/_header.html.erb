<% if logged_in? %>
  <p class="nav user">Welcome, <b><%= current_user.name %></b> Guru |
    <%= link_to 'Log Out', logout_path, method: "delete" %> | <%= link_to "TestGuru", root_path %></p>
<% else %>
  <p class="nav user">
    <%= link_to 'Log In', login_path %> or
    <%= link_to 'Sign Up', signup_path %>
  </p>
<% end %>