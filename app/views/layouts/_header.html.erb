<nav class="navbar navbar-light bg-light">
  <%= link_to 'TestGuru', root_path, class: 'navbar-brand' %>
  <% if user_signed_in? && current_user.admin? %>
    <%= link_to 'Admin-panel', admin_tests_path, class: 'navbar-brand' %>
  <% end %>

  <span class="navbar-text">
    <% if user_signed_in? %>
      <%= t('.welcome', user_email: current_user.email) %> Guru |
      <%= link_to t('.logout'), destroy_user_session_path, method: :delete %> 
    <% else %>
      <%= link_to t('.login'), new_session_path(resource_name) %> |
      <%= link_to t('.signup'), new_registration_path(resource_name) %>
    <% end %>
  </span>
</nav> 